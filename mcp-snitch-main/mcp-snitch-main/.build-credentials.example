#!/bin/bash
# Build Credentials Template
# Copy this file to .build-credentials and fill in your information
# .build-credentials is gitignored and will not be committed

# Apple Developer Information
export APPLE_ID="your-apple-id@example.com"
export APP_PASSWORD="your-app-specific-password"  # Generate at appleid.apple.com
export TEAM_ID="YOUR_TEAM_ID"  # Find with: security find-identity -p codesigning -v

# Signing Identity (certificate SHA or name)
# Find with: security find-identity -p codesigning -v
# Use either the SHA (40 hex chars) or the full name "Developer ID Application: Your Name (TEAM_ID)"
export SIGNING_IDENTITY="YOUR_CERTIFICATE_SHA_OR_NAME"

# Optional: Bundle ID override
# export BUNDLE_ID="com.yourcompany.MCPSnitch"
